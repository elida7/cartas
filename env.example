# ===== CONFIGURACIÓN DE LA BASE DE DATOS =====
# Cambiar estos valores según la configuración de PostgreSQL

# Host de la base de datos (localhost para local, URL para nube)
DB_HOST=localhost

# Puerto de PostgreSQL (5432 por defecto)
DB_PORT=5432

# Nombre de la base de datos
DB_NAME=magic_the_gathering

# Usuario de PostgreSQL
DB_USER=postgres

# Contraseña de PostgreSQL
DB_PASSWORD=tu_contraseña_aqui

# Habilitar SSL para conexiones en la nube (true/false)
DB_SSL=false

# ===== CONFIGURACIÓN DEL SERVIDOR =====
# Puerto donde correrá el servidor
PORT=3000

# Entorno de ejecución
NODE_ENV=development

